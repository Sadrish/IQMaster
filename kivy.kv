        size_hint:0.7,0.45
        pos_hint: {"x":0.15,"y":0.15}
        background_normal:'btn.png'
        background_down:'btn.png'
                  
<Q1>:
    name:'q1'
    BoxLayout:
        orientation: 'vertical'

        Label:
            text:'1.If the initial address is 1111H, Find the ROM memory address of 8051 chip: DS89C420 with 16KB?'
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            font_size:self.width/15
            color: 0,0,0
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
            
        Button:
            text: 'a.3FFFH'
            text_size: self.width, None
            font_size:self.width/15
            color: (1,1,0)
            on_release:self.background_color = (255,0,0)
            on_release:self.color = (0,0,0)
        Button:
            text: 'b.4FFFH'
            text_size: self.width, None
            font_size:self.width/15
            color: (1,1,0)
            on_release:self.background_color = (255,0,0)
        Button:
            text: 'c.5110H'
            text_size: self.width, None
            font_size:self.width/15
            color: (1,1,0)
            on_release:self.background_color = (0,255,0)
        Button:
            text: 'd.FFFFH'
            text_size: self.width, None
            font_size:self.width/15
            color: (1,1,0)
            on_release:self.background_color = (255,0,0)
        AnchorLayout:
            anchor_y:'bottom'
            BoxLayout:
                Button:
                    on_release:app.root.current = 'home'
                    background_normal:'backbtn.png'
                    background_down:'backbtn.png'
                Button:
                    on_release:app.root.current = 'q2'
                    background_normal:'nextbtn.png'
                    background_down:'nextbtn.png'

